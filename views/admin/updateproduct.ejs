                const addProductForm = document.getElementById('addProductForm');
                const erralert =document.getElementById('erralert');
                const name = document.getElementById('ecommerce-product-name');
                const description = document.getElementById('ecommerce-product-description');
                const price = document.getElementById('ecommerce-product-price');
                const stock = document.getElementById('productCount');
                const status =document.getElementById('product-status');
                const category =document.getElementById('ecommerce-category');

              




                addProductForm.addEventListener('submit', function (event) {
                    event.preventDefault();

                    const nameValue = name.value.trim();
                    const descriptionValue = description.value.trim();
                    const priceValue = price.value.trim();
                    const stockValue = stock.value.trim();
                    const categoryValue = category.value.trim();
                    const statusValue = status.value.trim();
                


                    validateRegisterForm(nameValue,descriptionValue,priceValue,stockValue,categoryValue);
                });
                const setError = (element, message) => {
                            const formGroup1 = element.parentElement;
                            const errorDisplay = formGroup1.querySelector('.errMsgSignup');
                            if (errorDisplay) {
                                errorDisplay.innerText = message;
                                element.classList.add('error');
                                errorDisplay.classList.add('error');
                                element.classList.remove('success');
                                errorDisplay.classList.remove('success');
                            }
                        }

                        const setSuccess = (element, message) => {
                            const formGroup1 = element.parentElement;
                            const errorDisplay = formGroup1.querySelector('.errMsgSignup');
                            if (errorDisplay) {
                                errorDisplay.innerText = message;
                                element.classList.add('success');
                                errorDisplay.classList.add('success');
                                element.classList.remove('error');
                                errorDisplay.classList.remove('error');
                            }
                        }
                        const validateRegisterForm = async (nameValue,descriptionValue,priceValue,stockValue,categoryValue)=>{
                            let isValid = true;

                            if (nameValue === '') {
                                setError(name, 'Enter Product Name');
                                isValid = false;
                            } else if (nameValue.length < 5) {
                                setError(name, 'Please Enter Correct Product Name');
                                isValid = false;
                            } else {
                                setSuccess(name, 'Product Name');
                            }
                            if (descriptionValue === '') {
                                setError(description, 'Enter Product Description');
                                isValid = false;
                            } else if (descriptionValue.length < 5) {
                                setError(description, 'Please Enter Correct Product Description');
                                isValid = false;
                            } else {
                                setSuccess(description, 'Description');
                            }
                            if(priceValue === ''){
                                setError(price, 'Please Enter Correct Product Price');
                                isValid = false;
                            } else if(priceValue < 499) {
                                setError(price, 'Minumum Product Price is 500');
                                isValid = false;
                                
                            }else{
                                setSuccess(price, 'Price');
                            }
                            if (stockValue === '') {
                                    setError(stock, 'Enter Stock');
                                    isValid = false;
                                } else if (parseInt(stockValue) < 0) {
                                    setError(stock, 'Product Stock Minimum 0');
                                    isValid = false;
                                } else {
                                    setSuccess(stock, 'Product Count');
                                }
                             if (categoryValue === '') {
                                setError(category, 'Choose a category');
                                isValid = false;
                                } else {
                                    setSuccess(category, 'Select Product Category');
                                }
                            
                            if (!isValid) {
                                    return;
                                }

                            try {
                                var formData = new FormData(addProductForm);

                                const response = await fetch('/admin/updateProduct', {
                                        method: 'POST',
                                        body: formData
                                    });

                                    const data = await response.json();
                                    if (data.success) {
                                    Swal.fire({
                                        title: 'Success!',
                                        text: data.message,
                                        icon: 'success',
                                        confirmButtonText: 'OK'
                                    }).then((result) => {
                                        if (result.isConfirmed) {
                                            window.location.href = data.redirectUrl;
                                        }
                                    });
                                } else {
                                    Swal.fire({
                                        title: 'Error!',
                                        text: data.message,
                                        icon: 'error',
                                        confirmButtonText: 'OK'
                                    });
                                }

                            } catch (error) {
                                console.error('Error during update product:', error);
                                    Swal.fire({
                                        title: 'Error!',
                                        text: 'An unexpected error occurred',
                                        icon: 'error',
                                        confirmButtonText: 'OK'
                                    });
                            }
                        }

            })
       </script>

