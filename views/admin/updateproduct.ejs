            <script>
            function previewImage(input, previewId) {
                const preview = document.getElementById(previewId);
                const placeholder = input.closest('.image-upload-container').querySelector('.upload-placeholder');
                const file = input.files[0];

                if (file) {
                    const reader = new FileReader();
                    reader.onloadend = function () {
                        preview.src = reader.result;
                        preview.style.display = 'block';
                        placeholder.style.display = 'none';
                    }
                    reader.readAsDataURL(file);
                } else if (preview.src && preview.src !== window.location.href) {
                    // If no new file is selected but there's an existing image, keep displaying it
                    preview.style.display = 'block';
                    placeholder.style.display = 'none';
                } else {
                    preview.src = "";
                    preview.style.display = 'none';
                    placeholder.style.display = 'flex';
                }
            }

            function triggerInputClick(inputId) {
                document.getElementById(inputId).click();
            }

            // Ensure images are shown on page load
            document.addEventListener('DOMContentLoaded', function() {
                ['imagePreview1', 'imagePreview2', 'imagePreview3'].forEach(previewId => {
                    const preview = document.getElementById(previewId);
                    const placeholder = preview.closest('.image-upload-container').querySelector('.upload-placeholder');
                    if (preview.src && preview.src !== window.location.href) {
                        preview.style.display = 'block';
                        placeholder.style.display = 'none';
                    } else {
